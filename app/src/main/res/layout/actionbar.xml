<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_gravity="fill_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/actionbar_logo"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_gravity="center"
            android:layout_weight="2"
            app:srcCompat="@drawable/icon_logo" />

        <ImageView
            android:id="@+id/actionbar_back2"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/icon_backactivity" />

        <TextView
            android:id="@+id/action_bar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="10"
            android:gravity="center"
            android:text="Custom Title"
            android:textAppearance="@style/LamoonBold"
            android:textColor="#FFFFFF"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/actionbar_search"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            app:srcCompat="@drawable/icon_search" />

        <ImageView
            android:id="@+id/actionbar_additional"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:visibility="gone"
            app:srcCompat="@drawable/additional_white" />

        <TextView
            android:id="@+id/actionbar_text"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:textAppearance="@style/LamoonRegular"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:visibility="gone">

        </TextView>

    </LinearLayout>


</LinearLayout>


